{
  "manifest_version": 3,
  "name": "Scrollbar Hider",
  "version": "1.0",
  "description": "Hides the scrollbar on all pages.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
